{{#if daily_charts}}
  <div class="jumbotron">
    <div class="row">
      <div class="col-xs-6">
        <a href="https://imgur.com/Jn8Ep1o"><img src="https://i.imgur.com/Jn8Ep1os.jpg" title="source: imgur.com" /></a>
        <h1>bee.have</h1>
      </div>
      <div class="col-xs-6"></div>
    </div>
    <p>bee.have is the new behavior app for your little beehive. Track daily chores, tasks, behavior, and priviledges all in one simple app to keep your family organized and on-track while on-the-go.</p>
  </div>
  <div class="container-fluid">
    {{#each daily_charts as |daily_chart|}}
    <div class="col-sm-1"></div>
      <div class="col-xs-12 col-sm-3 well index-box">
        <div class="row">
          <div class="col-xs-1"></div>
          <div class="col-xs-10">
            <center><img src="{{daily_chart.picture}}" id="{{daily_chart.id}}" class="small-image"></center>
          </div>
          <div class="col-xs-1"></div>
        </div>
        <div class="row">
          <div class="col-xs-1"></div>
          <div class="col-xs-10">
            <h4 class="chart-date">Date: {{daily_chart.date_of_birth}}</h4>
          </div>
          <div class="col-xs-1"></div>
        </div>
        <div class="row">
          <div class="col-xs-1"></div>
          <div class="col-xs-10">
            <h4 class="kid-name">Child: {{daily_chart.kid}}</h4>
          </div>
          <div class="col-xs-1"></div>
        </div>
        <div class="row">
          <div class="col-xs-1"></div>
          <div class="col-xs-10">
            <h4 class="chart-comments">Comments from this day: {{daily_chart.comments}}</h4>
          </div>
          <div class="col-xs-1"></div>
        </div>
        <br/>
        <div class="row">
          <div class="col-xs-6"></div>
          <div class="col-xs-6">
            <button class="btn btn-default btn-primary show-chart" type="button" data-id="{{daily_chart.id}}">View</button>
            <button class="btn btn-default remove" type="button" data-id="{{daily_chart.id}}">Delete</button>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
<center><img src="https://i.imgur.com/2kJfOghm.jpg">
  <h4> You don't have any charts yet. Click the button to Create Today's Daily Chart!</h4></center>
{{/if}}
